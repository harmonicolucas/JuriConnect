# Server Configuration
server.port=8080

# Database Configuration
# ATENÇÃO: Atualize a senha abaixo com a senha correta do seu PostgreSQL
spring.datasource.url=jdbc:postgresql://localhost:5432/juriconnect
spring.datasource.username=postgres
spring.datasource.password=SUA_SENHA_POSTGRESQL_AQUI
spring.datasource.driver-class-name=org.postgresql.Driver

# JPA Configuration
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect
spring.jpa.properties.hibernate.format_sql=true

# File Upload Configuration
spring.servlet.multipart.enabled=true
spring.servlet.multipart.max-file-size=10MB
spring.servlet.multipart.max-request-size=10MB

# JWT Configuration
jwt.secret=juriconnect-secret-key-2024-mozambique-very-secure-key
jwt.expiration=86400000

# CORS Configuration
cors.allowed-origins=http://localhost:3000

# File Storage
file.upload-dir=./uploads

